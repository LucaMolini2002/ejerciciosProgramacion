#define TRUE 1
#define FALSE 0
#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int maximo;
	int minimo;
	int i;
	int bufferInt;
	int flag=TRUE;

	do{
		printf("un numero %d",i+1);
		scanf("%d",&bufferInt);
		if(flag==1){
			maximo=bufferInt;
			minimo=bufferInt;
			flag=0;
		}
		else{
			if(bufferInt>maximo){
				maximo=bufferInt;
			}
			if(bufferInt<minimo){
				minimo=bufferInt;
			}
		}

	}
	while(888==bufferInt);

	printf("\nEl valor minimo es: %d y el valor maximo es : %d",minimo,maximo);

	return 0;
}
