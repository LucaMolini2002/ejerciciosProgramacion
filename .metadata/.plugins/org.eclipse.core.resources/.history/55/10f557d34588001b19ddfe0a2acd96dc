#include <stdio.h>
#include <stdlib.h>


int main(void) {
	//pedir N numeros, sacar promedios

	setbuf(stdout,NULL);

	int numeroIngresado;
	int acumuladorNumeros;
	float promedio;
	int i;

	for(i=0;i<5;i++){
		printf("Ingrese un numero\n");
	    scanf("%d",&numeroIngresado);
		acumuladorNumeros=acumuladorNumeros+numeroIngresado;


	}
	promedio=acumuladorNumeros/i;
	printf("El promedio es: %f \n",promedio);

	return EXIT_SUCCESS;
}
