#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout,NULL); // PONER SIEMPRE
	printf("Hola mundo");

	int numeroA;
	int numeroB;
	int suma;

	printf("\nIngresar un numero: ");
	scanf("%d",&numeroA);
	printf("\nIngrease otro numero: ");
	scanf("%d",&numeroB);
	suma=numeroA+numeroB;
	printf("\nLa suma da por resultado: %d",suma);

	return EXIT_SUCCESS;
}
